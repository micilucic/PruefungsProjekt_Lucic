<Window x:Class="PruefungsProjekt_Lucic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruefungsProjekt_Lucic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Registration">
                <MenuItem Header="Add new buddy" Click="MenuItemNewDog_Click"/>
                <MenuItem Header="Update information" Click="MenuItemUpdateDog_Click"/>
                <MenuItem Header="Delete buddy" Click="MenuItemDeleteDog_Click"/>
            </MenuItem>
        </Menu>
        
        <ListBox ItemsSource="{Binding Dogs}"
                 SelectedItem="{Binding ChosenDog}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                    <TextBox Text="{Binding Name}"/>
                    <TextBox Text="{Binding Owner}"/>
                    <TextBox Text="{Binding Age}"/>
                    <TextBox Text="{Binding Gender}"/>
                    <TextBox Text="{Binding DogType}"/>
                    <TextBox Text="{Binding DogDescription}"/>
                    <TextBox Text="{Binding City}"/>
                    <TextBox Text="{Binding MeetingPlace}"/>
                    <DatePicker SelectedDate="{Binding HoursAvailable}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
